@model List<EmployeeData.Model.EmployeeViewModel>
@{
    ViewData["Title"] = "Employee Details"
}
<DocType html>
    <h3>ContactUs Folder</h3>

    <form>
        <button asp-action="Create" asp-controller="ContactUs" class="btn btn-primary">Create Employee</button>
        <table>
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Date of birth</th>
                    <th>E-mail</th>
                    <th>Salary</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()){
                    @foreach(var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FullName</td>
                            <td>@employee.DateOfBirth</td>
                            <td>@employee.Email</td>
                            <td>@employee.Salary</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="ContactUs" asp-action="Edit"asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                                    <a asp-controller="ContactUs" asp-action="Delete"asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>

                                </div>
                            </td>

                        </tr>
                    }
                    }
                    else
                {
                    <tr>
                        <td colspan="6">
                            <div>
                                No Employee abaible at this moment!!!
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>


</DocType>

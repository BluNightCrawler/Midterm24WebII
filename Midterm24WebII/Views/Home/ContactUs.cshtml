@{
}
<DocType html>
    <h4>Home Folder</h4>
     <form>

        <table>
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Date of birth</th>
                    <th>E-mail</th>
                    <th>Salary</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()){
                    @foreach(var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FullName</td>
                            <td>@employee.DateOfBirth</td>
                            <td>@employee.Email</td>
                            <td>@employee.Salary</td>                       

                        </tr>
                    }
                    }
                    else
                {
                    <tr>
                        <td colspan="6">
                            <div>
                                No Employee abaible at this moment!!!
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>




</DocType>